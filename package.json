{
    "name": "ragx",
    "version": "0.1.0",
    "private": true,
    "description": "Production-ready RAG framework built on ElysiaJS",
    "workspaces": [
        "packages/*",
        "apps/*",
        "examples/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "test": "turbo run test",
        "lint": "turbo run lint",
        "format": "biome format --write .",
        "type-check": "turbo run type-check",
        "clean": "turbo run clean && rm -rf node_modules"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@types/bun": "^1.1.13",
        "turbo": "^2.3.3",
        "typescript": "^5.7.2"
    },
    "engines": {
        "node": ">=20.0.0",
        "bun": ">=1.0.0"
    },
    "packageManager": "bun@1.1.38"
}