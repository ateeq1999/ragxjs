{
    "name": "@ragx/vectordb",
    "version": "0.1.0",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "build": "bun build ./src/index.ts --outdir ./dist --target bun --format esm --external '*' && tsc --emitDeclarationOnly",
        "dev": "bun --watch src/index.ts",
        "test": "bun test",
        "type-check": "tsc --noEmit",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "@libsql/client": "^0.15.15",
        "@pinecone-database/pinecone": "^6.1.3",
        "@ragx/config": "workspace:*",
        "@ragx/core": "workspace:*",
        "chromadb": "^1.9.2"
    },
    "devDependencies": {
        "@types/bun": "^1.1.13",
        "typescript": "^5.7.2"
    }
}