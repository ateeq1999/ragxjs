{
    "name": "@ragx/server",
    "version": "0.1.0",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "build": "bun build ./src/index.ts --outdir ./dist --target bun --format esm --external '*' && tsc --emitDeclarationOnly",
        "dev": "bun --watch src/index.ts",
        "test": "bun test",
        "type-check": "tsc --noEmit",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "@ragx/config": "workspace:*",
        "@ragx/core": "workspace:*",
        "@ragx/llm": "workspace:*",
        "@ragx/embeddings": "workspace:*",
        "@ragx/vectordb": "workspace:*",
        "elysia": "^1.2.0",
        "@elysiajs/cors": "^1.2.0",
        "@elysiajs/swagger": "^1.2.0"
    },
    "devDependencies": {
        "@types/bun": "^1.1.13",
        "typescript": "^5.7.2"
    }
}