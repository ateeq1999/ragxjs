{
    "name": "@ragx/document-loaders",
    "version": "0.1.0",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "build": "bun build ./src/index.ts --outdir ./dist --target bun --format esm --external '*' && tsc --emitDeclarationOnly",
        "dev": "bun --watch src/index.ts",
        "test": "bun test",
        "type-check": "tsc --noEmit",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "@ragx/core": "workspace:*",
        "pdf-parse": "^1.1.1",
        "mammoth": "^1.6.0"
    },
    "devDependencies": {
        "@types/pdf-parse": "^1.1.4",
        "bun-types": "latest"
    }
}