{
    "name": "@ragx/llm",
    "version": "0.1.0",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "build": "bun build ./src/index.ts --outdir ./dist --target bun --format esm --external '*' && tsc --emitDeclarationOnly",
        "dev": "bun --watch src/index.ts",
        "test": "bun test",
        "type-check": "tsc --noEmit",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "@anthropic-ai/sdk": "^0.71.2",
        "@google/generative-ai": "^0.24.1",
        "@mistralai/mistralai": "^1.3.7",
        "@ragx/config": "workspace:*",
        "@ragx/core": "workspace:*",
        "openai": "^4.77.3"
    },
    "devDependencies": {
        "@types/bun": "^1.1.13",
        "typescript": "^5.7.2"
    }
}